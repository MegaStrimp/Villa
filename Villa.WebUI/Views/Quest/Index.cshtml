@model List<ResultQuestDto>
@{
    ViewData["Title"] = "Soru Cevap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Soru</th>
        <th>Cevap</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <tn>@count</tn>
            <td>@item.Question</td>
            <td>@item.Answer</td>
            <td>
                <button onclick="deleteQuest(this)" id="@item.Id" class="btn btn-outline-danger">Sil</button>
                <a asp-asp-controller="Quest" asp-action="UpdateQuest" asp-route-itemid="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-asp-controller="Quest" asp-action="CreateQuest" class="btn btn-outline-dark">Yeni Öne Çıkan Bilgisi Ekle</a>
<script>
    function deleteQuest(button) {
        var id = button.getAttribute("id");

        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Quest/DeleteQuest/" + id;
            }
        });
    };
</script>

