@model List<ResultCounterDto>
@{
    ViewData["Title"] = "Sayaç Bilgileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Değer</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Count</td>
            <td>
                <a asp-asp-controller="Counter" asp-action="DeleteCounter" asp-route-itemid="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-asp-controller="Counter" asp-action="UpdateCounter" asp-route-itemid="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-asp-controller="Counter" asp-action="CreateCounter" class="btn btn-outline-dark">Yeni Sayaç Bilgisi Ekle</a>